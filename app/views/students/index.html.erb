<p id="notice"><%= notice %></p>

<h1 class="text-center">Students</h1>



<table class="table table-hover">
   <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="table-active">
        <th><%= student.name %></th>
        <th><%= student.age %></th>
        <th><%= link_to 'Show', student, class:'btn btn-outline-primary' %></th>
        <th><%= link_to 'Edit', edit_student_path(student), class:'btn btn-outline-primary' %></th>
        <th><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></th>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: 'btn btn-primary btn-sm' %>
